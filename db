using Microsoft.AspNetCore.Mvc;
using System.Data.SqlClient;

namespace WebApplication1.Controllers
{
    public class RegistrationController : Controller
    {
        public IActionResult ViewRegistration()
        {
            string connectionString = "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=Nist;Integrated Security=True;Connect Timeout=30;Encrypt=False";
                 SqlConnection connection = new SqlConnection(connectionString);
            connection.Open();
            string script = "select * from Registration";
            SqlCommand command = new SqlCommand(script, connection);
            
            var reader = command.ExecuteReader();
            List<RegistrationModel> registrationModels = new List<RegistrationModel>();
            while (reader.Read())
            {
                RegistrationModel registrationModel = new RegistrationModel();
                registrationModel.Id = Convert.ToInt32(reader["Id"]);
                registrationModel.Name = reader["Name"].ToString();
                registrationModel.Address = reader["Address"].ToString();
              registrationModel.Roll_No = Convert.ToInt32(reader["Rollno"]); 
                registrationModels.Add(registrationModel);


            }
            connection.Close();
            return View(registrationModels);
        }
    }
}
